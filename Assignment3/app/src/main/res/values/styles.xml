<?xml version="1.0" encoding="utf-8"?>

<resources xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <style name="instrument_image">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="icon">
        <item name="android:layout_width">24sp</item>
        <item name="android:layout_height">32sp</item>
    </style>

    <style name="secondarytext">
        <item name="android:textColor">@color/textnormal</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="chipStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">54sp</item>
        <item name="android:textSize">24sp</item> <!-- Set text size -->
        <item name="android:textAlignment">center</item>
        <item name="android:drawablePadding">0dp</item>
        <item name="chipCornerRadius">12dp</item>
        <item name="chipStrokeColor">@android:color/transparent</item> <!-- Remove border -->
        <item name="android:textColor">@color/textlight</item> <!-- Change text color -->
        <item name="chipBackgroundColor">@color/unchecked</item> <!-- Set initial background color -->
    </style>
</resources>